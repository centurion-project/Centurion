    var cmsURL = '<?php echo $this->url(array('module'=>'media', 'controller'=>'admin-media', 'action'=>'index', 'popup'=>true, 'saving' => null), 'default') ?>';
    if (cmsURL.indexOf("?") < 0) {
        cmsURL = cmsURL + "?type=" + type;
    } else {
        cmsURL = cmsURL + "&type=" + type;
    }

    tinyMCE.activeEditor.windowManager.open({
        file : cmsURL,
        title : 'My File Browser',
        width : 900,
        height : 600,
        resizable : "yes",
        inline : "yes",  // This parameter only has an effect if you use the inlinepopups plugin!
        close_previous : "no",
        popup_css : false
    }, {
        window : win,
        input : field_name
    });
    return false;
}

