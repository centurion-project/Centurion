<?php 
$fields = array();

if ($this->form->info_language_id) {
    $fields = array('info_language_id', 'info_original_id');
} else if ($this->form->language_id) {
    $fields = array('language_id');
}

if (count($fields)) {
    $this->gridForm()->addAside($this->form, array(
        'label'         => 'Language',
        'elements'      => $fields 
    ));
}

echo $this->partial(array_pop($this->formViewScript), $this);
